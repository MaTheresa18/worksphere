# ===========================================
# WorkSphere - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Never commit your .env file to version control!
# ===========================================

# -------------------------------------------
# Application Settings
# -------------------------------------------
APP_NAME=WorkSphere
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000
APP_FRONTEND_URL="${APP_URL}"
FRONTEND_URL="${APP_URL}"

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# -------------------------------------------
# Logging
# -------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -------------------------------------------
# Database
# -------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=worksphere
DB_USERNAME=root
DB_PASSWORD=

# -------------------------------------------
# Session
# -------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# -------------------------------------------
# Cache & Queue
# -------------------------------------------
CACHE_STORE=database
# CACHE_PREFIX=

QUEUE_CONNECTION=database
FILESYSTEM_DISK=local

# -------------------------------------------
# Redis (Optional - for production)
# -------------------------------------------
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MEMCACHED_HOST=127.0.0.1

# -------------------------------------------
# Broadcasting (Laravel Reverb)
# -------------------------------------------
# Required for real-time features: chat, notifications, presence
BROADCAST_CONNECTION=reverb

REVERB_APP_ID=worksphere-app
REVERB_APP_KEY=worksphere-key
REVERB_APP_SECRET=worksphere-secret
REVERB_HOST="localhost"
REVERB_PORT=9000
REVERB_SCHEME=http
REVERB_ALLOW_CLIENT_MESSAGES=true

# Frontend (Vite) - automatically uses REVERB values
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# -------------------------------------------
# Mail
# -------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_ENCRYPTION=null
MAIL_SCHEME=null
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# -------------------------------------------
# OAuth - Google
# -------------------------------------------
# For social login and calendar sync
# Enable Google Calendar API in Google Cloud Console
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"
GOOGLE_CALENDAR_REDIRECT_URI="${APP_URL}/callback/calendar"

# -------------------------------------------
# OAuth - GitHub
# -------------------------------------------
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI="${APP_URL}/auth/github/callback"

# -------------------------------------------
# reCAPTCHA (Bot Protection)
# -------------------------------------------
# Supports both V2 (Checkbox) and V3 (Invisible)
RECAPTCHA_ENABLED=true
RECAPTCHA_SCORE_THRESHOLD=0.9

RECAPTCHA_V3_SITE_KEY=
RECAPTCHA_V3_SECRET_KEY=

RECAPTCHA_V2_SITE_KEY=
RECAPTCHA_V2_SECRET_KEY=

# Aliases for compatibility
RECAPTCHA_SITE_KEY="${RECAPTCHA_V3_SITE_KEY}"
RECAPTCHA_SECRET_KEY="${RECAPTCHA_V3_SECRET_KEY}"
VITE_RECAPTCHA_SITE_KEY="${RECAPTCHA_SITE_KEY}"
VITE_RECAPTCHA_V2_SITE_KEY="${RECAPTCHA_V2_SITE_KEY}"

# -------------------------------------------
# Google Safe Browsing
# -------------------------------------------
GOOGLE_SAFE_BROWSING_KEY=

# -------------------------------------------
# Twilio (SMS / 2FA)
# -------------------------------------------
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_VERIFY_SERVICE_SID=
TWILIO_FROM=

# -------------------------------------------
# OpenAI (AI Features)
# -------------------------------------------
OPENAI_API_KEY=
OPENAI_ORGANIZATION=
OPENAI_PROJECT=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_REQUEST_TIMEOUT=30

# -------------------------------------------
# GeoIP / Location Services
# -------------------------------------------
MAXMIND_ACCOUNT_ID=
MAXMIND_USER_ID=
MAXMIND_LICENSE_KEY=
IPGEOLOCATION_KEY=
IPDATA_API_KEY=
IPFINDER_API_KEY=

# -------------------------------------------
# AWS S3 (Production File Storage)
# -------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# -------------------------------------------
# Media Library (Spatie)
# -------------------------------------------
MEDIA_DISK=public
MEDIA_QUEUE=
QUEUE_CONVERSIONS_BY_DEFAULT=true
QUEUE_CONVERSIONS_AFTER_DB_COMMIT=true
MEDIA_PREFIX=
MEDIA_DOWNLOADER_SSL=true

# -------------------------------------------
# IMAP (Email Client)
# -------------------------------------------
IMAP_DEFAULT_ACCOUNT=default
IMAP_HOST=localhost
IMAP_PORT=993
IMAP_PROTOCOL=imap
IMAP_ENCRYPTION=ssl
IMAP_VALIDATE_CERT=true
IMAP_USERNAME=
IMAP_PASSWORD=
IMAP_AUTHENTICATION=

# -------------------------------------------
# Search
# -------------------------------------------
SCOUT_DRIVER=database

# -------------------------------------------
# Chat - Giphy Integration
# -------------------------------------------
GIPHY_API_KEY=

# -------------------------------------------
# Frontend / Vite
# -------------------------------------------
VITE_APP_NAME="${APP_NAME}"
VITE_API_BASE_URL=/
